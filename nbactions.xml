<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>cismet-dev-exec</activatedProfile>
        </activatedProfiles>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.workingdir>${de.cismet.cids.server.workingDir.lagis.simple.leo}</exec.workingdir>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xms128m -Xmx512m -Djava.security.policy=policy.file -classpath ${de.cismet.cids.classpath} de.cismet.cids.admin.serverManagement.HeadlessServerConsole</exec.args>
            <exec.executable>java</exec.executable>
        </properties>
        
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <activatedProfiles>
            <activatedProfile>cismet-dev-exec</activatedProfile>
        </activatedProfiles>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.workingdir>${de.cismet.cids.server.workingDir.lagis.simple.leo}</exec.workingdir>
            <exec.classpathScope>runtime</exec.classpathScope>
            <exec.args>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address} -Xms128m -Xmx512m -Djava.security.policy=policy.file -classpath ${de.cismet.cids.classpath} de.cismet.cids.admin.serverManagement.HeadlessServerConsole</exec.args>
            <jpda.listen>true</jpda.listen>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
    <action>
        <actionName>profile</actionName>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:1.1.1:exec</goal>
        </goals>
        <properties>
            <jalopy.skip>true</jalopy.skip>
            <exec.workingdir>${de.cismet.cids.server.workingDir.wunda.kif}</exec.workingdir>
            <exec.args>${profiler.args} -Xms128m -Xmx512m -Djava.security.policy=policy.file -classpath ${de.cismet.cids.classpath} de.cismet.cids.admin.serverManagement.HeadlessServerConsole</exec.args>
            <profiler.action>profile</profiler.action>
            <exec.executable>${profiler.java}</exec.executable>
        </properties>
    </action>
</actions>
